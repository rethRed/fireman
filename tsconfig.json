{
  "compilerOptions": {
    "module": "commonjs",
    "emitDeclarationOnly": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": false,
    "incremental": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "declarationMap": false,
    "baseUrl": "packages",
    "paths": {
        "@common/*": [
          "./@common/src/*"
        ],
        "@api/nestjs/*": [
            "./api/nestjs/src/*"
        ],
        "@auth/*": [
          "./auth/src/*"
        ],
        "@support/*": [
          "./support/src/*"
        ],
        "@fireman/*": [
          "./fireman/src/*"
        ],
    },
  }
}
